<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="profitpioneer.controllers.MainController">
    <top>
        <fx:include source="menu/MenuBar.fxml"/>
    </top>
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: gray; -fx-border-width: 1;" prefWidth="250">
            <Label text="User Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <fx:include source="user/UserView.fxml"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: gray; -fx-border-width: 1;">
            <Label text="Market Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <fx:include source="stock/StockOverviewView.fxml"/>
        </VBox>
    </center>
    <right>
        <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: gray; -fx-border-width: 1;">
            <Label text="Portfolio Overview" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <fx:include source="portfolio/PortfolioView.fxml"/>
        </VBox>
    </right>
</BorderPane>
